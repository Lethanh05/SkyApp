<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Hardware feature for camera -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/skymall_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/skymall_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SkyMall"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SkyMall">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".auth.LoginActivity"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".auth.RegisterActivity" />

        <activity
            android:name=".ui.payment.PaymentActivity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.notification.NotificationActivity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.security.ChangePasswordActivity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.voucher.VoucherActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.voucher.VoucherHistoryActivity"
            android:parentActivityName=".ui.voucher.VoucherActivity" />

        <!-- FileProvider cho chụp ảnh -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.skymall.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>