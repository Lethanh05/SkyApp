<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txtOrderId"
        android:textStyle="bold"
        android:text="Đơn #123"
        android:textSize="16sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtCustomer"
        android:text="Khách: Nguyễn Văn A - 0900000000"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtCreatedAt"
        android:text="Ngày: 2025-08-24 09:00"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtTotal"
        android:text="Tổng: 240000đ"
        android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:weightSum="3"
        android:gravity="center">

        <Button
            android:id="@+id/btnConfirm"
            android:text="Xác nhận"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnCfmove"
            android:text="Đang vận chuyển"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnCf"
            android:text="Đã nhận"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtStatus"
        android:text="PENDING"
        android:gravity="end"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"/>


</LinearLayout>