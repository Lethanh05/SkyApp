<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white">

    <CheckBox
        android:id="@+id/cbItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:background="#EEEEEE"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Tên sản phẩm rất dài..."
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phân loại: Mặc định"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫99.000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/skymall_primary"/>

            <!-- SPACER đẩy cụm số lượng sang phải -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Bộ đếm số lượng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="#EFEFEF"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_media_previous"/>

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="1"/>

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_media_next"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Hành động phụ (xóa/để dành) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textSize="12sp"
                android:textColor="#D32F2F"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/btnWishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Để dành"
                android:textSize="12sp"
                android:padding="6dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
