<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView android:id="@+id/img" android:layout_width="56dp" android:layout_height="56dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="8dp">
        <TextView android:id="@+id/tvName" android:text="Áo thun..."
            android:maxLines="2" android:ellipsize="end"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/tvPrice" android:text="₫259.000"/>
            <TextView android:id="@+id/tvQty" android:text="  x2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
